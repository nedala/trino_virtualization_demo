<configuration>

    <!-- Hive Metastore -->
    <property><name>metastore.thrift.uris</name><value>thrift://0.0.0.0:9083</value></property>
    <property><name>hive.metastore.uris</name><value>thrift://0.0.0.0:9083</value></property>
    <property><name>metastore.thrift.port</name><value>9083</value></property>
    <property><name>metastore.task.threads.always</name><value>org.apache.hadoop.hive.metastore.events.EventCleanerTask,org.apache.hadoop.hive.metastore.MaterializationsCacheCleanerTask</value></property>
    <property><name>metastore.expression.proxy</name><value>org.apache.hadoop.hive.metastore.DefaultPartitionExpressionProxy</value></property>

    <!-- Spark Warehouse -->
    <property><name>spark.sql.warehouse.dir</name><value>s3a://spark/warehouse/</value></property>
    <property><name>hive.metastore.warehouse.dir</name><value>s3a://spark/warehouse/</value></property>
    <property><name>metastore.warehouse.dir</name><value>s3a://spark/warehouse/</value></property>

    <!-- SQL Server Metastore backend -->
    <property><name>javax.jdo.option.ConnectionDriverName</name><value>com.microsoft.sqlserver.jdbc.SQLServerDriver</value></property>
    <property><name>javax.jdo.option.ConnectionURL</name><value>jdbc:sqlserver://sqlserver:1433;databaseName=master;createDatabaseIfNotExist=true;encrypt=false;trustServerCertificate=true</value></property>
    <property><name>javax.jdo.option.ConnectionUserName</name><value>sa</value></property>
    <property><name>javax.jdo.option.ConnectionPassword</name><value>yourStrong(!)Password</value></property>

    <!-- MinIO S3A Access -->
    <property><name>fs.defaultFS</name><value>s3a://spark</value></property>
    <property><name>fs.s3a.access.key</name><value>accesskey</value></property>
    <property><name>fs.s3a.secret.key</name><value>secretkey</value></property>
    <property><name>fs.s3a.endpoint</name><value>http://minio:9000</value></property>
    <property><name>fs.s3a.path.style.access</name><value>true</value></property>
    <property><name>fs.s3a.connection.ssl.enabled</name><value>false</value></property>
    <property><name>fs.s3a.aws.credentials.provider</name><value>org.apache.hadoop.fs.s3a.SimpleAWSCredentialsProvider</value></property>
    <property><name>fs.s3a.connection.establish.timeout</name><value>30000</value></property>
    <property><name>fs.s3a.connection.timeout</name><value>200000</value></property>

    <!-- REQUIRED FIXES: Convert all duration strings to ms -->
    <property><name>fs.s3a.multipart.purge.age</name><value>86400000</value></property>
    <property><name>fs.s3a.threads.keepalivetime</name><value>60000</value></property>
    <property><name>fs.s3a.retry.interval</name><value>500</value></property>
    <property><name>fs.s3a.retry.throttle.interval</name><value>100</value></property>
    <property><name>fs.s3a.connection.ttl</name><value>300000</value></property>
    <property><name>fs.s3a.assumed.role.session.duration</name><value>1800000</value></property>

    <!-- Recommended S3A performance settings -->
    <property><name>fs.s3a.connection.maximum</name><value>200</value></property>
    <property><name>fs.s3a.threads.max</name><value>200</value></property>
    <property><name>fs.s3a.threads.core</name><value>50</value></property>
    <property><name>fs.s3a.buffer.dir</name><value>/tmp</value></property>

    <!-- Misc -->
    <property><name>dfs.replication</name><value>1</value></property>

</configuration>
